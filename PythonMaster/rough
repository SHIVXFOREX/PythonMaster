from datetime import datetime
import time

# datetime object containing current date and time


# dd/mm/YY H:M:S


while True :
    time.sleep(1)
    now = datetime.now()
    dt_string = now.strftime("%d/%m/%Y %H:%M:%S")
    seconds = now.strftime("%H:%M:%S")
    print("min and sec =", seconds)
    if seconds == "39:00" :
        print("time is 39:00")
        break
    
